@model TareaU2.Models.ViewModels.Especievm
@{
    Layout = "Layout";
}
<main>

    <div class="especieficha1">
        <img src="~/especies/@(Model.Id).jpg" />
        <div>
            <h1>@Model.NombreClase</h1>
            <p><label>Clase:</label><a href="~/Home/especies?nombrees=@Model.NombreClase">@Model.NombreClase</a></p>
            <p><label>Peso:</label>@Model.Peso</p>
            <p><label>Tamaño:</label>@Model.Tamano</p>
            <p><label>Habitat:</label>@Model.Habitat</p>
            <p><label>Descripción:</label></p>
            <p>@Model.Observaciones</p>
        </div>

        <a href="~/Home/especies?nombrees=@(Model.NombreClase)">Regresar</a>
    </div>
</main>